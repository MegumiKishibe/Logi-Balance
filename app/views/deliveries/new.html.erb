<h1>Course</h1>
<p><%= "Welcome back!#{Employee.find(session[:employee_id]).last_name_en}" if session[:employee_id] %></p>

<%= form_with scope: :delivery, url: deliveries_path, method: :post, local: true do |form| %>
  <div style="margin-bottom: 1rem;">
    <%= form.label :odo_start_km, "開始指針（オドメーター）：" %><br>
    <%= form.number_field :odo_start_km, min: 0, required: true %>
  </div>

  <div>
    <%= form.collection_select :course_id, Course.all, :id, :name, prompt: "コースを選択" %>
  </div>

  <div>
    <%= form.submit "Start", class: "btn btn-primary" %>
  </div>
<% end %>

<%= link_to "logout", logout_path, data: { turbo_method: :delete } %>