<div class="course-container">
  <div class="title-group">
    <div class="title">
      <p2>コース開始</p2>
      <p3>| Start Course</p3>
    </div>
  </div>

  <div class="form-card">
    <%= form_with scope: :delivery, url: deliveries_path, method: :post, local: true, class: "delivery-form" do |form| %>
      <div class="input-grid">
        
        <div class="input-group">
          <label class="input-label">開始指針（オドメーター）</label>
          <%= form.number_field :odo_start_km, min: 0, required: true, class: "form-input", placeholder: "00000" %>
        </div>

        <div class="input-group">
          <label class="input-label">走行コース</label>
          <div class="select-wrapper">
            <%= form.collection_select :course_id, Course.all, :id, :name, { prompt: "コースを選択" }, class: "form-select", required: true %>
          </div>
        </div>

        <div class="form-actions-center">
          <%= form.submit "登録開始", class: "btn btn-primary btn-wide" %>
        </div>

      </div>
    <% end %>
  </div>
</div>