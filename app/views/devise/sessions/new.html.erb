<div class="login-page-wrapper">
  <div class="login-container"> <%# 全体を包むコンテナを追加 %>
    
    <%# 1. 枠の外に出して目立たせるヘッダー %>
<div class="login-header-outside">
      <div class="main-brand-logo">
        <span class="logo-dot"></span>
        <span class="logo-text">logi-balance</span>
      </div>
      <p class="sub-welcome-text">Welcome Back!</p>
    </div>

    <div class="login-card">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="input-grid">
          <div class="input-group" style="text-align: left;">
            <label class="input-label">社員番号</label>
            <%= f.text_field :employee_no, autofocus: true, class: "form-input", placeholder: "Employee No" %>
          </div>

          <div class="input-group" style="text-align: left;">
            <label class="input-label">パスワード</label>
            <%= f.password_field :password, class: "form-input", placeholder: "Password" %>
          </div>

          <div class="form-actions">
            <%= f.submit "ログイン", class: "btn btn-primary btn-wide" %>
          </div>
        </div>
      <% end %>

      <div class="login-footer-links">
        <%= render "employees/shared/links" %>
      </div>
    </div>

  </div>
</div>